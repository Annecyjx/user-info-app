doctype html
html
    title UserApp
    head
      link(type='text/css', rel='stylesheet', href='css/materialize.min.css', media='screen,projection')
      style.
        label{
          font-size:20px;
          margin:20px 5px;
        }
        input[type=text]{
          width: 300px;
          box-sizing: border-box;
          border: 2px solid #ccc;
          border-radius: 4px;
          font-size: 16px;
          background-color: white;
          background-position: 10px 10px;
          padding: 6px 10px 6px 10px;
          margin: 5px 10px 5px 10px;
        }	
        button{
          margin:20px 5px;
          background-color:lightblue;
          border:0;
          font-size:20px;
        }
        ul {
          font-family: 'Lucida Console';
        }
        a.brand-logo.center {
          font-family: 'Lucida Console';
          color: #A52A2A;
        }
    body
      nav
        .nav-wrapper.teal.lighten-2
          a.brand-logo.center(href='#!') Register New User
            ul.left.hide-on-med-and-down
              li
                a(href = '/aboutUsers') All the Users 
              li
                a(href = '/search') Search Users 
              li
                a(href = '/home') Back To Home Page

      .main.container
        .row
          .col-md-6.col-md-offset-3
            form(method='POST' action='/addUsers')
              div.form-group(style='padding-left:2%')
                label(for='firstname') First Name:
                input#firstname.form-control(type='text', placeholder='first name' name='firstname')
              div.form-group(style='padding-left:2%')
                label(for='lastname') Last Name:
                input#lastname.form-control(type='text', placeholder='last name' name='lastname')
              div.form-group(style='padding-left:2%')
                label(for='email') Email Address:
                input#email.form-control(type='text', placeholder='name@email.com' name='email')
              button.btn.btn-primary(type='submit',style='padding-left:2%') Sign up

